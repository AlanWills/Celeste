                                 Style="{DynamicResource FloatNumericUpDownBox}"/>
            <TextBlock Text="Z" Margin="2,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <xctk:SingleUpDown Value="{Binding Value.Z, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource FlipBool}}"
                                 Style="{DynamicResource FloatNumericUpDownBox}"/>
        </StackPanel>
    </data_templates:PropertyDataTemplate>
    <data_templates:PropertyDataTemplate x:Key="Vector4DataTemplate" DataType="{x:Type bindings_kernel:Vector4}">
