                                 Style="{DynamicResource FloatNumericUpDownBox}"/>
            <TextBlock Text="W" Margin="2,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <xctk:SingleUpDown Value="{Binding Value.W, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" IsEnabled="{Binding IsReadOnly, Converter={StaticResource FlipBool}}"
                                 Style="{DynamicResource FloatNumericUpDownBox}"/>
        </StackPanel>
    </data_templates:PropertyDataTemplate>
</ResourceDictionary>