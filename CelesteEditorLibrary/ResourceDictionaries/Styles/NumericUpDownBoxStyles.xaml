<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Style x:Key="IntegerNumericUpDownBox" TargetType="xctk:IntegerUpDown">
        <Setter Property="AutoSelectBehavior" Value="OnFocus"/>
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>
    <Style x:Key="FloatNumericUpDownBox" TargetType="xctk:SingleUpDown">
        <Setter Property="AutoSelectBehavior" Value="OnFocus"/>
        <Setter Property="FormatString" Value="G"/>
        <Setter Property="Increment" Value="0.01"/>
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>