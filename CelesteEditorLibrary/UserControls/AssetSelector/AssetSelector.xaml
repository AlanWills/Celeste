<UserControl x:Class="CelesteEditor.UserControls.AssetSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CelesteEditor.UserControls"
             mc:Ignorable="d"
             x:Name="AssetSelectorUserControl">
    <DockPanel Height="28">
        <ComboBox x:Name="ItemsComboBox" ItemsSource="{Binding Path=AssetSelectorViewModel.Items, ElementName=AssetSelectorUserControl}" IsTextSearchEnabled="True" IsEditable="True"
                  DisplayMemberPath="FileInfo.Name" SelectedValue="{Binding Path=AssetSelectorViewModel.SelectedItem, ElementName=AssetSelectorUserControl}"/>
    </DockPanel>
</UserControl>
