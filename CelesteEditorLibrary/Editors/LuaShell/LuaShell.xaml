<editor:Editor x:Class="CelesteEditor.Editors.LuaShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:data_templates="clr-namespace:CelesteEditor.DataTemplates"
             xmlns:editor="clr-namespace:CelesteEditor.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding Input}" AcceptsReturn="True" AcceptsTab="True"/>
        <DockPanel Grid.Row="1" LastChildFill="False" HorizontalAlignment="Right">
            <Button Content="Send" Style="{StaticResource DefaultButton}" Margin="5" Click="SendButton_Click"/>
        </DockPanel>
        <TextBlock Grid.Row="2" Text="{Binding Output}"/>
    </Grid>
</editor:Editor>
