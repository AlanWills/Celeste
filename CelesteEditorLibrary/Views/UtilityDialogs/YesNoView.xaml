<local:BaseView x:Class="CelesteEngineEditor.Views.YesNoView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CelesteEngineEditor.Views"
      mc:Ignorable="d"
      Style="{StaticResource DefaultPage}"
	  MinWidth="250"
      MaxWidth="450">
	<StackPanel Margin="20" Name="MainStackPanel">
		<TextBlock x:Name="Message" Style="{StaticResource DarkText}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="13" TextWrapping="Wrap" Margin="0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="YesButton" Style="{StaticResource DefaultButton}" Content="Yes"
                    Click="CloseWindow_Success" IsDefault="True" HorizontalAlignment="Right" Margin="0,0,10,0" Padding="10,0,10,0"/>
            <Button x:Name="NoButton" Style="{StaticResource DefaultButton}" Content="No"
                    IsCancel="True" HorizontalAlignment="Right" Margin="0" Padding="10,0,10,0"/>
        </StackPanel>
    </StackPanel>
</local:BaseView>
